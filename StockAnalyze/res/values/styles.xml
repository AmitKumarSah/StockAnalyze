<resources>
	<style name="moneyText" parent="@android:style/TextAppearance.Medium">
		<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:textColor">#111111</item>-->
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
<!--        <item name="android:layout_gravity">center_vertical</item>-->
        <item name="android:padding">1dp</item>
        <item name="android:gravity">right</item>
	</style>
	<style name="priceInfoBlock">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:padding">2dp</item>
<!--		<item name="android:paddingRight">4dp</item>-->
		<item name="android:layout_marginRight">2dp</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:background">@drawable/groupbox_shape</item>
		<item name="android:layout_gravity">right</item>
		<item name="android:gravity">center</item>
	</style>
	<style name="titleText" parent="@android:style/TextAppearance.Medium">
	    <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">12dp</item>
	</style>
	<style name="subText" parent="@android:style/TextAppearance.Small">
		<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">italic</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
<!--		<item name="android:padding">2dp</item>-->
	</style>
	<style name="subText.Small">
		<item name="android:textSize">13dp</item>
	</style>
    <style name="logoView" parent="@android:style/TextAppearance.Medium">
    	<item name="android:layout_width">wrap_content</item> 
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:padding">2dip</item>-->
<!--        <item name="android:layout_margin">4dip</item>-->
        <item name="android:layout_marginRight">6dp</item>
    </style>
    <style name="listHeader" parent="subText">
    	<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">8sp</item>
        <item name="android:gravity">center</item>
		<item name="android:singleLine">false</item>
    </style>
    <style name="groupboxBody">
		<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:layout_marginRight">4dip</item>
        <item name="android:layout_marginBottom">4dip</item>
        <item name="android:background">@drawable/groupbox_body_shape</item>
    </style>
     <style name="groupboxHeader">
		<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@drawable/groupbox_header_shape</item>
        <item name="android:textColor">@color/groubox_header_color_font</item>
    </style>
    <style name="homeBlock">
		<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    	<item name="android:padding">10dp</item>
    	<item name="android:layout_margin">10dp</item>
<!--    	<item name="android:layout_gravity">center</item>-->
    	<item name="android:background">@drawable/home_block_shape_selector</item>
<!-- 		<item name="android:background">@drawable/btn_top_selector</item> -->
    	<item name="android:focusable">true</item>
    	<item name="android:clickable">true</item>
    	<item name="android:enabled">true</item>
    </style>
    <style name="actionBar">
		<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:background">@drawable/actionbar_shape</item>
        <item name="android:textColor">#EEEEEE</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="actionBar.title_text" parent="titleText">
     	<item name="android:layout_width">wrap_content</item>
     	<item name="android:layout_height">wrap_content</item>
     	<item name="android:text">@string/app_name</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:lines">1</item>
<!-- 		<item name="android:focusable">true</item> -->
		<item name="android:paddingLeft">8dp</item>
<!-- 		<item name="android:background">@drawable/text_top_selector</item> -->
<!--        <item name="android:textSize">14sip</item>-->
    </style>
     <style name="actionBar.subtitle_text" parent="actionBar.title_text">
     	<item name="android:textSize">10sp</item>
     	<item name="android:focusable">false</item>
		<item name="android:text">@string/lastDataUpdated</item>
     	<item name="android:gravity">bottom|left</item>
    </style>
    <style name="actionBar.ImageButton">
<!--    	<item name="android:layout_height">fill_parent</item>-->
    	<item name="android:layout_width">@dimen/actionbar_height</item>
    	<item name="android:background">@drawable/btn_top_selector</item>
    </style>
    <style name="tableItem">
     	<item name="android:layout_width">wrap_content</item>
     	<item name="android:layout_height">wrap_content</item>
     	<item name="android:padding">5dp</item>
<!--     	<item name="android:layout_margin">2dip</item>-->
    </style>
    <style name="aboutContent">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_margin">6dp</item>
    </style>
</resources>
