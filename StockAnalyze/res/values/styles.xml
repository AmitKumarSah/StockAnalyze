<resources>
    <style name="radioStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
		<item name="android:button">@null</item>
		<item name="android:paddingLeft">14dp</item>
		<item name="android:paddingRight">14dp</item>
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingBottom">5dp</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/text_color_selector</item>
		<item name="android:background">@drawable/bg_radio_middle_selector</item>
    </style>
    
	<style name="moneyText" parent="@android:style/TextAppearance.Medium">
		<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:textColor">#111111</item>-->
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
		<item name="android:shadowColor">@color/shadow_dark</item>
		<item name="android:shadowRadius">0.2</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">1</item>
<!--        <item name="android:layout_gravity">center_vertical</item>-->
        <item name="android:padding">1dp</item>
        <item name="android:gravity">right</item>
	</style>
	<style name="priceInfoBlock">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:padding">2dp</item>
<!--		<item name="android:paddingRight">4dp</item>-->
		<item name="android:layout_marginRight">2dp</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:background">@drawable/groupbox_shape</item>
		<item name="android:layout_gravity">right</item>
		<item name="android:gravity">center</item>
	</style>
	<style name="titleText" parent="@android:style/TextAppearance.Medium">
	    <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">12dp</item>
	</style>
	<style name="subText" parent="@android:style/TextAppearance.Small">
		<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">#555555</item>
	</style>
	<style name="text" parent="@android:style/TextAppearance.Medium">
		<item name="android:singleLine">true</item>
		<item name="android:textSize">@dimen/text_size_small</item>
	</style>
    <style name="logoView" parent="@android:style/TextAppearance.Medium">
    	<item name="android:layout_width">wrap_content</item> 
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:padding">2dip</item>-->
<!--        <item name="android:layout_margin">4dip</item>-->
        <item name="android:layout_marginRight">6dp</item>
    </style>
    <style name="listHeader" parent="subText">
    	<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">8sp</item>
        <item name="android:gravity">center</item>
		<item name="android:singleLine">false</item>
    </style>
    <style name="groupboxBody">
		<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:layout_marginRight">4dip</item>
        <item name="android:layout_marginBottom">4dip</item>
        <item name="android:background">@drawable/bg_header</item>
<!--         <item name="android:background">@drawable/groupbox_body_shape</item> -->
    </style>
     <style name="groupboxHeader">
		<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_header</item>
<!--         <item name="android:textColor">@color/groubox_header_color_font</item> -->
    </style>
    <style name="homeBlock">
		<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    	<item name="android:padding">10dp</item>
    	<item name="android:layout_margin">10dp</item>
		<item name="android:background">@android:drawable/list_selector_background</item>
<!--     	<item name="android:background">@drawable/home_block_shape_selector</item> -->
    	<item name="android:focusable">true</item>
    	<item name="android:clickable">true</item>
    	<item name="android:enabled">true</item>
    </style>
    <style name="tableItem">
     	<item name="android:layout_width">wrap_content</item>
     	<item name="android:layout_height">wrap_content</item>
     	<item name="android:padding">8dp</item>
<!--     	<item name="android:layout_margin">2dip</item>-->
    </style>
    <style name="aboutContent">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_margin">6dp</item>
    </style>
    
	<style name="MyTitlePageIndicator">
		<item name="clipPadding">-38dp</item>
        <item name="footerColor">@color/actionbar_title_color</item>
        <item name="footerPadding">4dp</item>
        <item name="selectedColor">@android:color/black</item>
        <item name="selectedBold">true</item>
        <item name="android:textColor">#505050</item>
        <item name="android:textSize">12sp</item>
		<item name="titlePadding">54dp</item>
		<item name="footerLineHeight">1dp</item>
        <item name="footerIndicatorStyle">@integer/indicatorStyle</item>
		<item name="footerIndicatorUnderlinePadding">50dp</item>
    </style>
	
	<style name="ActionBarCompat">
        <item name="android:background">#eee</item>
    </style>

    <style name="ActionBarCompatItemBase">
        <!-- layout_width/height must be set in code -->
        <item name="android:scaleType">center</item>
        <item name="android:background">@drawable/actionbar_compat_item</item>
    </style>

    <style name="ActionBarCompatProgressIndicator" parent="android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminate">true</item>
    </style>

    <style name="ActionBarCompatTitleBase">
        <item name="android:id">@id/actionbar_compat_title</item>
        <!-- layout_width/height/weight must be set in code -->
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="ActionBarCompatTitle" parent="style/ActionBarCompatTitleBase">
        <item name="android:textColor">@color/actionbar_title_color</item>
    </style>

    <style name="ActionBarCompatItem" parent="style/ActionBarCompatItemBase">
    </style>

    <style name="ActionBarCompatHomeItem" parent="style/ActionBarCompatItemBase">
    </style>
</resources>
