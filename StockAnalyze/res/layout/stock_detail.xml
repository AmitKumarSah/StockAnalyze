<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent">
	
	<cz.tomas.StockAnalyze.ui.widgets.ActionBar
		xmlns:actionBar="http://schemas.android.com/apk/res/cz.tomas.StockAnalyze"
		android:id="@+id/detailActionBar"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		actionBar:showAddButton="true"
		actionBar:titleText="@string/activityStockDetail" />
		
	<ScrollView
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:fillViewport="true">
		<LinearLayout android:id="@+id/DetailLinear"
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:layout_below="@+id/detailActionBar"
			android:orientation="vertical">
			<TextView android:id="@+id/txtDetailDate"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:visibility="gone"
				android:paddingTop="3dp"
				android:layout_margin="4dp"/>
			<TextView android:id="@+id/txtDetailHeader"
				android:text="@+id/TextView01" 
				style="@style/groupboxHeader"
				android:ellipsize="marquee" />
			<LinearLayout android:id="@+id/DetailLinearSummary"
				style="@style/groupboxBody"
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="vertical">
				<TextView android:id="@+id/txtDetailName" 
					android:text="@+id/TextView01"
					android:layout_height="wrap_content" android:layout_width="fill_parent"
					android:textStyle="bold"
					android:gravity="center" 
					android:textSize="20dp"
					android:layout_margin="4dp" />
			
				<TextView android:id="@+id/txtDetailClosingPrice"
					android:textStyle="bold" 
					android:layout_height="wrap_content" 
					android:text="@string/failed_price_update"
					style="@style/moneyText"
					android:ellipsize="marquee" android:fadeScrollbars="true"
					android:layout_margin="2dp" android:gravity="center"
					android:textSize="24dp" android:lines="1" 
					android:layout_width="fill_parent">
				</TextView>
				<TextView android:layout_height="wrap_content" android:text="change"
					style="@style/moneyText"
					android:id="@+id/txtDetailChange"
					android:layout_margin="2dp" android:gravity="center"
					android:textSize="22dp" android:lines="1" 
					android:layout_width="fill_parent">
				</TextView>
			</LinearLayout>
			<TextView android:id="@+id/label_stats"
				android:text="@string/Statistics"
				style="@style/groupboxHeader" />
			<TableLayout android:id="@+id/tableDetailData"
				style="@style/groupboxBody"
			 	android:stretchColumns="1"
			 	android:minHeight="60dp"
				android:shrinkColumns="0">
				<TableRow android:id="@+id/TableDetailRow01"
					android:layout_width="fill_parent" android:layout_height="fill_parent">
					<TextView android:id="@+id/lblDetailMin"
						android:layout_height="fill_parent"
						android:layout_width="fill_parent" 
						android:text="@string/LabelDetailMin" 
						android:layout_marginRight="5dp"
						android:gravity="left" 
						android:layout_marginLeft="2dp"></TextView>
					<TextView android:id="@+id/txtDetailMin"
						android:text="txtDetailClosingPriceyear_min" 
						android:lines="1" 
						android:layout_height="fill_parent"
						android:gravity="right" 
						android:layout_marginRight="5dp"
						android:layout_gravity="right" 
						android:layout_width="fill_parent"></TextView>
				</TableRow>
				<TableRow android:layout_height="wrap_content" android:id="@+id/tableDetailRow02"
					android:layout_width="fill_parent">
					<TextView android:id="@+id/lblDetailMax"
						android:layout_height="wrap_content"
						android:text="@string/LabelDetailMax"
						android:layout_marginRight="5dp"
						android:layout_width="fill_parent" 
						android:gravity="left"
						android:layout_marginLeft="2dp"></TextView>
					<TextView android:id="@+id/txtDetailMax"
						android:text="year_max"
						android:lines="1" 
						android:layout_height="fill_parent"
						android:gravity="right" 
						android:layout_marginRight="5dp"
						android:layout_gravity="right" 
						android:layout_width="fill_parent"></TextView>
				</TableRow>
				<TableRow android:layout_height="wrap_content" android:id="@+id/tableDetailRow03"
					android:layout_width="fill_parent">
					<TextView android:layout_height="wrap_content"
						android:id="@+id/lblDetailVolume"
						android:text="@string/LabelDetailVolume" 
						android:layout_marginRight="5dp"
						android:layout_width="fill_parent" 
						android:gravity="left"
						android:layout_marginLeft="2dp">
					</TextView>
					<TextView android:text="volume" android:id="@+id/txtDetailVolume"
						android:lines="1" 
						android:layout_height="fill_parent"
						android:gravity="right" 
						android:layout_marginRight="5dp"
						android:layout_gravity="right"
						android:layout_width="fill_parent">
					</TextView>
				</TableRow>
			</TableLayout>
		
			<include layout="@layout/part_chart_with_header" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
