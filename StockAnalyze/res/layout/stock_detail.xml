<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/DetailLinear" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical">
	<TextView android:text="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/txtDetailHeader"></TextView>

	<TextView android:text="@+id/TextView01" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/txtDetailName" android:textStyle="bold" android:textSize="18dip"></TextView>
	<TextView android:id="@+id/txtDetailDate" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:lines="2" android:text="@string/failed_price_update" android:ellipsize="marquee" android:fadeScrollbars="true" android:textStyle="bold" android:id="@+id/txtDetailClosingPrice" android:textSize="24dip"></TextView>
<TableLayout android:layout_height="fill_parent" android:layout_width="fill_parent" android:stretchColumns="1" android:shrinkColumns="0"> android:id="@+id/tableDetailData" android:layout_margin="5dip">
	<TableRow android:id="@+id/TableDetailRow01" android:layout_width="fill_parent" android:layout_height="fill_parent">
		<TextView android:layout_height="fill_parent" android:layout_width="fill_parent" android:id="@+id/lblDetailMin" android:text="@string/LabelDetailMin" android:layout_marginRight="5dip" android:gravity="left" android:layout_marginLeft="2dip"></TextView>
		<TextView android:text="@+id/TextView01" android:id="@+id/txtDetailMin" android:lines="1" android:layout_height="fill_parent" android:gravity="right" android:layout_marginRight="5dip" android:layout_gravity="right" android:layout_width="fill_parent"></TextView>
	</TableRow>
	<TableRow android:layout_height="wrap_content" android:id="@+id/tableDetailRow02" android:layout_width="fill_parent">
		<TextView android:layout_height="wrap_content" android:id="@+id/lblDetailMax" android:text="@string/LabelDetailMax" android:layout_marginRight="5dip" android:layout_width="fill_parent" android:gravity="left" android:layout_marginLeft="2dip"></TextView>
		<TextView android:text="@+id/TextView01" android:id="@+id/txtDetailMax" android:lines="1" android:layout_height="fill_parent" android:gravity="right" android:layout_marginRight="5dip" android:layout_gravity="right" android:layout_width="fill_parent"></TextView>
	</TableRow>
	<TableRow android:layout_height="wrap_content" android:id="@+id/tableDetailRow03" android:layout_width="fill_parent">
		<TextView android:layout_height="wrap_content" android:id="@+id/lblDetailVolume" android:text="@string/LabelDetailVolume" android:layout_marginRight="5dip" android:layout_width="fill_parent" android:gravity="left" android:layout_marginLeft="2dip"></TextView>
		<TextView android:text="@+id/TextView01" android:id="@+id/txtDetailVolume" android:lines="1" android:layout_height="fill_parent" android:gravity="right" android:layout_marginRight="5dip" android:layout_gravity="right" android:layout_width="fill_parent"></TextView>
	</TableRow>
</TableLayout>

</LinearLayout>
