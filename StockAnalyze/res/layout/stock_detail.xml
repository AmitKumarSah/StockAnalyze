<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent">
		
	<ScrollView
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:fillViewport="true">
		<LinearLayout android:id="@+id/DetailLinear"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<TextView android:id="@+id/txtDetailDate"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:visibility="gone"
				android:paddingTop="3dp"
				android:layout_margin="4dp"/>
			<TextView android:id="@+id/txtDetailHeader"
				android:text="@+id/TextView01" 
				style="@style/groupboxHeader"
				android:ellipsize="marquee" />
			<LinearLayout android:id="@+id/DetailLinearSummary"
				style="@style/groupboxBody"
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="vertical">
				<TextView android:id="@+id/txtDetailName" 
					style="@style/titleText"
					android:layout_height="wrap_content" 
					android:layout_width="fill_parent"
					android:gravity="center" 
					android:textSize="@dimen/text_size_large" 
					android:layout_margin="4dp" />
			
				<TextView android:id="@+id/txtDetailClosingPrice" 
					android:text="@string/failed_price_update"
					style="@style/titleText"
					android:layout_height="wrap_content"
					android:layout_width="fill_parent"
					android:ellipsize="marquee"
					android:layout_margin="2dp" 
					android:gravity="center"
					android:textSize="@dimen/text_size_large" 
					android:lines="1" >
				</TextView>
				<TextView android:id="@+id/txtDetailChange"
					style="@style/titleText" 
					android:layout_height="wrap_content"
					android:layout_width="fill_parent"
					android:layout_margin="2dp" 
					android:gravity="center"
					android:textSize="@dimen/text_size_large" 
					android:lines="1" >
				</TextView>
			</LinearLayout>
			<TextView android:id="@+id/label_stats"
				android:text="@string/Statistics"
				style="@style/groupboxHeader" />
			<TableLayout android:id="@+id/tableDetailData"
				style="@style/groupboxBody"
			 	android:stretchColumns="1"
			 	android:minHeight="60dp"
				android:shrinkColumns="0">
				<TableRow>
					<TextView android:id="@+id/lblDetailMin"
					    style="@style/text"
						android:layout_height="fill_parent"
						android:layout_width="fill_parent" 
						android:text="@string/LabelDetailMin" 
						android:layout_marginRight="5dp"
						android:gravity="left" 
						android:layout_marginLeft="2dp"></TextView>
					<TextView android:id="@+id/txtDetailMin"
					    style="@style/text"
						android:lines="1" 
						android:layout_height="fill_parent"
						android:gravity="right" 
						android:layout_marginRight="5dp"
						android:layout_gravity="right" 
						android:layout_width="fill_parent"></TextView>
				</TableRow>
				<TableRow>
					<TextView android:id="@+id/lblDetailMax"
					    style="@style/text"
						android:layout_height="wrap_content"
						android:text="@string/LabelDetailMax"
						android:layout_marginRight="5dp"
						android:layout_width="fill_parent" 
						android:gravity="left"
						android:layout_marginLeft="2dp"/>
					<TextView android:id="@+id/txtDetailMax"
					    style="@style/text"
						android:lines="1" 
						android:layout_height="fill_parent"
						android:gravity="right" 
						android:layout_marginRight="5dp"
						android:layout_gravity="right" 
						android:layout_width="fill_parent"></TextView>
				</TableRow>
				<TableRow>
					<TextView android:id="@+id/lblDetailVolume"
					    style="@style/text"
					    android:layout_height="wrap_content"
						android:text="@string/LabelDetailVolume" 
						android:layout_marginRight="5dp"
						android:layout_width="fill_parent" 
						android:gravity="left"
						android:layout_marginLeft="2dp">
					</TextView>
					<TextView android:id="@+id/txtDetailVolume"
					    style="@style/text"
						android:lines="1" 
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:gravity="right" 
						android:layout_marginRight="5dp"
						android:layout_gravity="right">
					</TextView>
				</TableRow>
			</TableLayout>
		
			<include layout="@layout/part_chart_with_header" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
