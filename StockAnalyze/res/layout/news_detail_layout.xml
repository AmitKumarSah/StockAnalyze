<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
    
    <cz.tomas.StockAnalyze.ui.widgets.ActionBar
		xmlns:actionBar="http://schemas.android.com/apk/res/cz.tomas.StockAnalyze"
		android:id="@+id/homeActionBar"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:visibility="gone"
		actionBar:showRefreshButton="false"
		actionBar:titleText="@string/activityNews" />
		
	<cz.tomas.StockAnalyze.ui.widgets.CirclesView android:id="@+id/newsCirclesView" 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent"
		android:layout_marginTop="3dp"
		android:gravity="center" />
	<ProgressBar
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:id="@+id/progressNews"
	    android:indeterminate="true"
	 	android:layout_gravity="center_vertical|center_horizontal"
	 	android:padding="12dp"
	 	android:visibility="gone" />
	<android.support.v4.view.ViewPager android:id="@+id/newsArticleViewPager" 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent" />
</LinearLayout>
