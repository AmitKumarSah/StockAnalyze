<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent">
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:orientation="vertical">
	<cz.tomas.StockAnalyze.ui.widgets.ActionBar
		android:id="@+id/homeActionBar"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" />
	<TableLayout android:id="@+id/homeBlockTable"
		xmlns:block="http://schemas.android.com/apk/res/cz.tomas.StockAnalyze"
		android:layout_below="@id/homeActionBar"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:stretchColumns="*" >
		<TableRow>
			<cz.tomas.StockAnalyze.ui.widgets.HomeBlockView
				android:id="@+id/homeBlockStockList"
				block:textId="@string/homeStockList" 
				block:imageId="@drawable/icon"
				block:target="cz.tomas.StockAnalyze.StockListActivity"/>
			<cz.tomas.StockAnalyze.ui.widgets.HomeBlockView 
				android:id="@+id/homeBlockNews"
				block:textId="@string/homeNews"
				block:imageId="@drawable/icon" 
				block:target="cz.tomas.StockAnalyze.NewsActivity"/>
		</TableRow>
		<TableRow>
			<cz.tomas.StockAnalyze.ui.widgets.HomeBlockView
				android:id="@+id/homeBlockCurrencies"
				block:textId="@string/homeCurrencies" 
				block:imageId="@drawable/icon"
				block:target="cz.tomas.StockAnalyze.CurrenciesActivity"/>
			<cz.tomas.StockAnalyze.ui.widgets.HomeBlockView 
				android:id="@+id/homeBlockPortfolio"
				block:textId="@string/homeMyPortfolio"
				block:imageId="@drawable/icon" 
				block:target="cz.tomas.StockAnalyze.PortfolioActivity"/>
		</TableRow>
	</TableLayout>
		<View android:id="@+id/homeSeparator1" 
			android:layout_width="fill_parent" 
			android:layout_height="1dip"
			android:layout_below="@id/actionTitle"
			android:layout_alignParentBottom="true"
			android:background="@color/separator_color"
			android:layout_margin="10dip" />
</LinearLayout>
</ScrollView>