			android:theme="@style/themeLightTitle"
			android:label="@string/AddPortfolioItemActivityTitle"></activity>
		<activity android:name=".activity.NewsActivity" android:launchMode="singleTop"  android:label="@string/homeNews"/>
		<activity android:name=".activity.NewsDetailActivity"  android:label="@string/homeNews"/>
		<activity android:name=".activity.AppPreferencesActivity" 
			android:label="@string/AppPreferencesActivityTitle"
			android:theme="@style/themeLightTitle"></activity>
		<activity android:name=".activity.AboutActivity" 
